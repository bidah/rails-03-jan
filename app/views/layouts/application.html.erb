<!DOCTYPE html>
<html>
<head>
  <title>Rails03Feb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row row-top">
    <div class="col-md-12">
      <% if params[:action] == "index" %>
        <%= link_to "new producer".upcase, new_producer_path, class: "btn btn-default" %>
      <% elsif params[:action] == "new" %>
        <%= link_to "home".upcase, producers_path, class: "btn btn-default" %>
      <% elsif params[:action] == "show" %>
        <%= link_to "home".upcase, producers_path, class: "btn btn-default" %>
        <%= link_to "new producer".upcase, new_producer_path, class: "btn btn-default" %>
        <%= link_to "edit producer".upcase , edit_producer_path(@producer), class: "btn btn-default" %>
      <% else %>
        <%= link_to "home".upcase, producers_path, class: "btn btn-default" %>
        <%= link_to "new producer".upcase, new_producer_path, class: "btn btn-default" %>
      <% end %>
      </br></br>
      <%= yield %>
    </div>
  </div>
</div>


</body>
</html>
